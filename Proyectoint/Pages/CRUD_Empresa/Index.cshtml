@page
@model Proyectoint.EmpresaModel

@{
    ViewData["Title"] = "Empresas";
}

<h1>Empresas</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empresa[0].NombreEmp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa[0].Tel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Empresa) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEmp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdEmpresa">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdEmpresa">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdEmpresa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
